@model Tini_HairTies.Models.HairTieColourViewModel

@*@model IEnumerable<Tini_HairTies.Models.HairTies>*@

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="HairTies" asp-action="Index" method="get">
    <p>
        <select asp-for="HairTieColour" asp-items="Model.Colour">
            <option value="">Colours</option>
        </select>

        Material: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HairTies[0].Material)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HairTies[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HairTies[0].Colour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HairTies[0].Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HairTies[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HairTies[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HairTies[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.HairTies)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Material)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Colour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
